{
  "name": "react-gridifier",
  "version": "1.1.0",
  "description": "A react wrapper for Jquery Gridifier library",
  "author": "Xavier Gouley <gxapplications@gmail.com>",
  "contributors": [],
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "start": "webpack-dev-server --config example/webpack.config.js --no-info --progress --inline",
    "dist": "babel lib --presets babel-preset-es2015-node6 --presets babel-preset-stage-2 --out-dir dist",
    "prepublish": "npm run dist",
    "doc:jsdoc": "jsdoc --package package.json --readme README.md --destination doc/jsdoc/ lib/**",
    "doc:coverage": "cross-env NODE_ENV=test nyc --require babel-core/register --reporter=lcov mocha && rimraf .nyc_output",
    "doc": "rimraf doc && npm run doc:jsdoc && npm run doc:coverage",
    "lint": "standard --verbose | snazzy",
    "test": "npm run dist && cross-env NODE_ENV=test mocha --require ignore-styles",
    "validate": "npm ls"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gxapplications/react-gridifier"
  },
  "bugs": {
    "url": "https://github.com/gxapplications/react-gridifier/issues"
  },
  "homepage": "https://github.com/gxapplications/react-gridifier",
  "keywords": [
    "gridifier",
    "react"
  ],
  "engines": {
    "node": ">= 8.11.1",
    "npm": ">= 6.4.1"
  },
  "babel": {
    "presets": [
      "es2015-node6",
      "stage-2",
      "react"
    ],
    "plugins": [
      [
        "css-modules-transform",
        {
          "generateScopedName": "[local]",
          "extractCss": "./dist/styles.css"
        }
      ]
    ]
  },
  "standard": {
    "env": {
      "node": true
    },
    "parser": "babel-eslint",
    "ignore": [
      "/doc/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "nyc": {
    "lines": 40,
    "check-coverage": true,
    "report-dir": "./doc/coverage",
    "include": [
      "lib/**"
    ]
  },
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.5.0",
    "classnames": "^2.2.5",
    "gridifier": "^2.0.3",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-required-if": "^1.0.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "chai": "^4.0.1",
    "colors": "^1.1.2",
    "cross-env": "^1.0.7",
    "css-loader": "^0.28.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "ignore-styles": "^5.0.1",
    "jquery": "^3.2.1",
    "jsdoc": "^3.4.0",
    "jsdom": "^11.0.0",
    "materialize-css": "^0.98.2",
    "mocha": "^3.4.2",
    "nyc": "^6.1.1",
    "precommit-hook": "^3.0.0",
    "react-addons-test-utils": "^15.6.0",
    "rimraf": "^2.5.2",
    "snazzy": "^7.0.0",
    "standard": "^6.0.1",
    "style-loader": "^0.18.2",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "directories": {
    "doc": "./doc",
    "lib": "./lib",
    "dist": "./dist"
  },
  "config": {}
}
